{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "build": {
    "env": {
      "PYTHON_VERSION": "3.11"
    }
  },
  "installCommand": "pip install -r requirements.txt || pip install flask sqlalchemy psycopg2-binary python-dotenv"
}
